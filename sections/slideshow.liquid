
<style>
  #slideshow-{{section.id}}{
    --slides-per-page: {{section.settings.slides_per_page}};
    --gap:  {{section.settings.gap}}px;
  }
</style>

<embla-slider id="slideshow-{{section.id}}" class="{{ section.settings | class_list }} color-{{ section.settings.color_scheme }}"
  options="loop: {{ section.settings.loop }}, containScroll: trimSnaps, align: start"
  auto-height
  {% if section.settings.autoplay_speed != 0 %}
    autoplay="{{ section.settings.autoplay_speed | times: 1000 }}"
  {% endif %}
  {% if section.settings.effect contains "fade" %}
   fade
  {% endif %}
>
  <embla-viewport>
    <embla-slides>
      {% content_for "blocks" %}
    </embla-slides>
  </embla-viewport>

  {% if section.blocks.size > 1 and section.settings.controls %}
    {% content_for "block", type: "slideshow-controls", id: "slideshow-controls" %}
  {% endif %}

  {% if section.blocks.size > 1 and section.settings.navigation %}
    {% content_for "block", type: "slideshow-navigation", id: "slideshow-navigation" %}
  {% endif %}

</embla-slider>

{% schema %}
{
  "name": "Slideshow",
  "blocks": [{ "type": "slide" }],
  "settings": [
    {
      "type": "header",
      "content": "Position"
    },
    {
      "type": "select",
      "id": "position",
      "label": "Position",
      "options": [
        {
          "value": "",
          "label": "static"
        },
        {
          "value": "is-relative",
          "label": "relative"
        }
      ],
      "default": ""
    },
    {
      "type": "style.size_panel",
      "id": "size",
      "label": "Size",
      "default": {
        "width": "100%",
        "flex-grow": "1"
      }
    },
    {
      "type": "header",
      "content": "Slider"
    },
    {
      "type": "range",
      "id": "slides_per_page",
      "label": "Slides per page",
      "min": 1,
      "max": 12,
      "step": 1,
      "default": 1
    },
    {
      "type": "number",
      "id": "gap",
      "label": "Gap (px)",
      "default": 0
    },
    {
      "type": "checkbox",
      "id": "loop",
      "label": "Loop",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "controls",
      "label": "Controls",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "navigation",
      "label": "Navigation",
      "default": true
    },
    {
      "type": "select",
      "id": "effect",
      "label": "Effect",
      "options": [
        {
          "value": "fade",
          "label": "Fade"
        },
        {
          "value": "slide",
          "label": "Slide"
        }
      ],
      "default": "slide"
    },
    {
      "type": "range",
      "id": "autoplay_speed",
      "label": "Autoplay speed",
      "min": 0,
      "max": 7,
      "step": 1,
      "unit": "s",
      "default": 0,
      "info": "0 = off"
    },
    {
      "type": "header",
      "content": "Color"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    } 
  ],
  "presets": [
    {
      "name": "Slideshow",
      "blocks": [
        {
          "type": "slide",
          "blocks": [
            
          ]
        },
        {
          "type": "slide",
          "blocks": [
            
          ]
        }
      ]
    }
  ]
}
{% endschema %}
