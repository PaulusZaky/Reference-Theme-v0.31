<script type="application/ld+json">
{
  "@context": "http://schema.org",
  "@type" : "Organization",
  "name" : {{ shop.name | json }},
  "url" : "{{ shop.url }}",
  "potentialAction": {
    "@type": "SearchAction",
    "target": "{{ routes.search_url }}?q={search_term}",
    "query-input": "required name=search_term"
  },
  "sameAs" : [
    {% if shop.brand.metafields.social_links.twitter.value != blank %}
      "{{ shop.brand.metafields.social_links.twitter.value }}",
    {% endif %}
    {% if shop.brand.metafields.social_links.facebook.value != blank %}
      "{{ shop.brand.metafields.social_links.facebook.value }}",
    {% endif %}
    {% if shop.brand.metafields.social_links.instagram.value != blank %}
      "{{ shop.brand.metafields.social_links.instagram.value }}",
    {% endif %}
    {% if shop.brand.metafields.social_links.pinterest.value != blank %}
      "{{ shop.brand.metafields.social_links.pinterest.value }}",
    {% endif %}
    {% if shop.brand.metafields.social_links.youtube.value != blank %}
      "{{ shop.brand.metafields.social_links.youtube.value }}"
    {% endif %}
  ]
}
</script>