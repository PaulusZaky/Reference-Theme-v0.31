<div
  class="embla-navigation"
  aria-label="Slideshow thumbnails"
>
{% for block in section.blocks %}
  <embla-thumbnail
    class="{{ block.settings.navigation_style }}"
    {{ block.shopify_attributes }}
    aria-label="Slide {{ forloop.index }} of {{ forloop.length }}"
    index="{{ forloop.index0 }}"
  >
  </embla-thumbnail>
{% endfor %}
</div>

{% schema %}
{
  "name": "Slideshow navigation",
  "settings": [
    {
      "type": "select",
      "id": "navigation_style",
      "options": [
        {
          "value": "embla-dot",
          "label": "Dots"
        },
        {
          "value": "embla-bar",
          "label": "Bars"
        }
      ],
      "label": "Navigation style",
      "default": "embla-bars"
    } 
  ]
}
{% endschema %}
