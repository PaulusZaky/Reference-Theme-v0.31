{% assign navigation_style = block.settings.navigation_style %}
{% if navigation_style != "" %}
  <div
    class="embla-navigation {{ navigation_style }} color-{{ block.settings.color_scheme }}"
    aria-label="Slideshow thumbnails"
  >
    {% for block in section.blocks %}
      <embla-thumbnail
        class=""
        {{ block.shopify_attributes }}
        aria-label="Slide {{ forloop.index }} of {{ forloop.length }}"
        index="{{ forloop.index0 }}"
      >
        {% if navigation_style == "embla-dots" %}
          <svg width="120" height="120" viewBox="0 0 120 120">
              <circle cx="60" cy="60" r="54" fill="none" stroke="#e6e6e6" stroke-width="12" />
              <circle class="percent ninety" cx="60" cy="60" r="54" fill="none" stroke="#f77a52" stroke-width="12" pathLength="100" />
          </svg>
        {% endif %}
      </embla-thumbnail>
    {% endfor %}
  </div>
{% endif %}

{% schema %}
{
  "name": "Slideshow navigation",
  "settings": [
    {
      "type": "select",
      "id": "navigation_style",
      "options": [
        {
          "value": "",
          "label": "none"
        },
        {
          "value": "embla-dots",
          "label": "Dots"
        },
        {
          "value": "embla-bars",
          "label": "Bars"
        }
      ],
      "label": "Navigation style",
      "default": "embla-bars"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    } 
  ]
}
{% endschema %}
