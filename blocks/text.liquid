<div
  class="{{ block.settings | class_list }} {{ block.settings.text_style }} text-{{ block.settings.alignment }}"
  {{ block.shopify_attributes }}
>
  {{ block.settings.text }}
</div>

{% schema %}
{
  "name": "Text",
  "tag": null,
  "settings": [
    {
      "type": "richtext",
      "id": "text",
      "label": "Text",
      "default": "<p>Share information about your brand with your customers. Describe a product, make announcements, or welcome customers to your store.</p>"
    },
    {
      "type": "select",
      "id": "text_style",
      "label": "Style",
      "options": [
        {
          "value": "large",
          "label": "Body large"
        },
        {
          "value": "p",
          "label": "Body"
        },
        {
          "value": "small",
          "label": "Body small"
        }
      ],
      "default": "p"
    },
    {
      "type": "select",
      "id": "alignment",
      "label": "Alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "start"
    }
  ],
  "presets": [{ "name": "Text" }]
}
{% endschema %}
