<button type="{{ block.settings.type }}">
  <span class="button-label">
    {{ block.settings.label }}
  </span>
  <svg
    focusable="false"
    class="button-spinner"
    viewBox="0 0 66 66"
    xmlns="http://www.w3.org/2000/svg">
    <circle class="path" fill="none" stroke-width="6" cx="33" cy="33" r="30"></circle>
  </svg>
</button>

