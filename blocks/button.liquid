{% schema %}
{
  "name": "Button",
  "tag": null,
  "settings": [
    {
      "type": "select",
      "id": "type",
      "label": "Type",
      "options": [
        {
          "value": "submit",
          "label": "Submit"
        },
        {
          "value": "reset",
          "label": "Reset"
        },
        {
          "value": "button",
          "label": "Button"
        }
      ],
      "default": "submit"
    },
    {
      "type": "text",
      "id": "label",
      "label": "Label",
      "default": "Button label"
    },
    {
      "type": "select",
      "id": "button_style",
      "label": "Style",
      "options": [
        {
          "value": "btn btn--primary",
          "label": "Primary"
        },
        {
          "value": "btn btn--secondary",
          "label": "Secondary"
        },
        {
          "value": "btn btn--tertiary",
          "label": "Tertiary"
        }
      ],
      "default": "btn btn--primary"
    }
  ],
  "presets": [
    {
      "name": "Submit button"
    }
  ]
}
{% endschema %}
