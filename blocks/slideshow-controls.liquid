<div class="embla-controls">
  <embla-prev
    class=""
    aria-label="Previous slide"
  >
    {% render 'icons', icon: 'chevron-right' %}
  </embla-prev>
  <embla-next
    class="slideshow-control slideshow-control--next button-secondary"
    aria-label="Next slide"
  >
    {% render 'icons', icon: 'chevron-right' %}
  </embla-next>
</div>

