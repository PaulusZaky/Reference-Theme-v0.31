<a
  href="{{ block.settings.link }}"
  class="btn {{ block.settings.button_style }}"
  {%- if block.settings.open_in_new_tab -%}
    target="_blank" rel="noopener noreferrer"
  {%- endif -%}
  {{ block.shopify_attributes }}
>
  {{ block.settings.label }}
</a>

{% schema %}
{
  "name": "Button",
  "tag": null,
  "settings": [
    {
      "type": "url",
      "id": "link",
      "label": "Link"
    },
    {
      "type": "text",
      "id": "label",
      "label": "Label",
      "default": "Button label"
    },
    {
      "type": "select",
      "id": "style_class",
      "label": "Style",
      "options": [
        {
          "value": "btn--primary",
          "label": "Primary"
        },
        {
          "value": "btn--secondary",
          "label": "Secondary"
        },
        {
          "value": "btn--tertiary",
          "label": "Tertiary"
        },
        {
          "value": "btn--link",
          "label": "Link"
        }
      ],
      "default": "btn--primary"
    },
    {
      "type": "checkbox",
      "id": "open_in_new_tab",
      "label": "Open this link in a new window",
      "default": false
    }
  ],
  "presets": [
    {
      "name": "Button (link)",
      "settings": {
        "label": "Link label",
        "style_class": "link"
      }
    },
    {
      "name": "Button (primary)",
      "settings": {
        "label": "Primary button label",
        "style_class": "btn--primary",
      }
    },
    {
      "name": "Button (secondary)",
      "settings": {
        "label": "Secondary button label",
        "style_class": "btn--secondary",
      }
    },
    {
      "name": "Button (tertiary)",
      "settings": {
        "label": "Tertiary button label",
        "style_class": "btn--tertiary",
      }
    }
  ]
}
{% endschema %}
