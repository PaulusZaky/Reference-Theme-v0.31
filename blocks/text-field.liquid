{% if block.settings.multiline %}
  {% assign tag = "textarea" %}
{% else %}
  {% assign tag = 'input type="text"' %}
{% endif %}
<{{ tag }}
  name="{{ block.settings.name }}"
  {% if block.settings.pattern %}pattern="{{ block.settings.pattern }}"{% endif %}
  {% if block.settings.placeholder %}placeholder="{{ block.settings.placeholder }}"{% endif %}
  {% if block.settings.max_length %}maxlength="{{ block.settings.max_length }}"{% endif %}
  {% if block.settings.required %} required {% endif %}
/>

{% schema %}
{
  "name": "Text field",
  "tag": null,
  "settings": [
    {
      "type": "checkbox",
      "id": "required",
      "label": "Required",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "multiline",
      "label": "Muliline",
      "default": false
    },
    {
      "type": "text",
      "id": "name",
      "label": "Name"
    },
    {
      "type": "text",
      "id": "label",
      "label": "Label"
    },
    {
      "type": "text",
      "id": "pattern",
      "label": "Pattern",
      "info": "A regular expression to validate the input."
    },
    {
      "type": "text",
      "id": "placeholder",
      "label": "Placeholder"
    },
    {
      "type": "number",
      "id": "max_length",
      "label": "Max length"
    }
  ],
  "presets": [
    {
      "name": "Text field"
    }
  ]
}
{% endschema %}
