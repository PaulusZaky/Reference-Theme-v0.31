<!doctype html>
<html class="no-js" lang="{{ request.locale.iso_code }}">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="theme-color" content="">
    <link rel="canonical" href="{{ canonical_url }}">
    <link rel="preconnect" href="https://cdn.shopify.com" crossorigin>

    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="preconnect" href="https://cdn.shopify.com">

    <title>
      {{ page_title }}
      {%- if current_tags %} &ndash; tagged "{{ current_tags | join: ', ' }}"{% endif -%}
      {%- if current_page != 1 %} &ndash; Page {{ current_page }}{% endif -%}
      {%- unless page_title contains shop.name %} &ndash; {{ shop.name }}{% endunless -%}
    </title>

    {% if page_description %}
      <meta name="description" content="{{ page_description | escape }}">
    {% endif %}

    {{ content_for_header }}

    {% for i in 1..9 %}
      {% assign font_weight = i | times: 100 %}
      {% assign font = settings.font_family_primary | font_modify: "weight", font_weight %}
      {% unless font.system? %}
        <link rel="preload" as="font" href="{{ font | font_url }}" type="font/woff2" crossorigin>
      {% endunless %}
    {% endfor %}

    {{ 'critical.css' | asset_url | stylesheet_tag }}
    {{ 'color.css' | asset_url | stylesheet_tag }}
    {{ 'typography.css' | asset_url | stylesheet_tag }}
    {{ 'buttons.css' | asset_url | stylesheet_tag }}
    {{ 'minimal-skin.css' | asset_url | stylesheet_tag }}
    
    <script src="{{ 'global.js' | asset_url }}" defer="defer"></script>

    <script type="module" src="{{ 'embla-slider-component.js' | asset_url }}"></script>
    <link rel="stylesheet" href="{{ 'embla-slider-component.css' | asset_url }}">
    <link rel="stylesheet" href="{{ 'embla-slider-component-skin.css' | asset_url }}">
  </head>

  <body>
    {% sections 'header-group' %}

    <main id="MainContent" class="content-for-layout focus-none" role="main" tabindex="-1">
      {{ content_for_layout }}
    </main>

    {% sections 'footer-group' %}

    {% render 'seo-global' %}
  </body>
</html>
